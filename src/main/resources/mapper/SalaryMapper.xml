<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hiep.staff.mapper.SalaryMapper">

	<select id="getSetting"
		resultType="com.hiep.staff.entity.SalarySetting">
		select * from salary_setting
	</select>
	
	<update id="updateSetting">
		UPDATE salary_setting
		SET
		basic_salary = #{basic_salary},
		up_salary = #{up_salary}
		WHERE
		salary_id = 1
	</update>
	

</mapper>